    "version": "0.2.0",
    "configurations": [
        {
            "name": "tsnode",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "preLaunchTask": "npm: tsc",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/app.ts"
            ]
        },
        {
            "name": "codegen",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/codegen/index.ts"
            ]
        },
    ]
}